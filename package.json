{
  "name": "react-better-containers",
  "license": "MIT",
  "type": "module",
  "author": {
    "email": "kuzanisu@gmail.com",
    "name": "Kushuh",
    "url": "https://github.com/kushuh"
  },
  "description": "Handsome containers for React.",
  "version": "1.0.0",
  "private": false,
  "dependencies": {
    "kushuh-react-utils": "^1.1.8",
    "react": "^16.13.1"
  },
  "main": "./lib/index.js",
  "files": [
    "lib/*.js",
    "build/*"
  ],
  "scripts": {
    "test-and-publish": "yarn test && yarn build && yarn publish",
    "build": "rollup -c && tsc",
    "test": "jest",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "jest": true
    },
    "plugins": [
      "css-modules",
      "@typescript-eslint"
    ],
    "extends": [
      "@react-native-community",
      "plugin:css-modules/recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-react-native-css-modules",
    "rules": {
      "selector-class-pattern": "^[a-z][a-zA-Z0-9]*$",
      "declaration-block-no-duplicate-properties": true,
      "no-duplicate-selectors": true,
      "no-extra-semicolons": true,
      "no-eol-whitespace": true,
      "no-missing-end-of-source-newline": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "containers",
    "boxes",
    "parsers",
    "handsome",
    "react",
    "reactjs",
    "intuitive",
    "simple",
    "efficient"
  ],
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@jest/globals": "^26.0.1",
    "@teamsupercell/typings-for-css-modules-loader": "^2.1.1",
    "@types/react": "^16.9.34",
    "@types/react-css-modules": "^4.6.2",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "autoprefixer": "^9.7.6",
    "copy-webpack-plugin": "^5.1.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^26.0.1",
    "react-scripts": "^3.4.1",
    "rollup": "^2.8.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "typescript": "^3.9.2",
    "typescript-plugin-css-modules": "^2.3.0"
  }
}
